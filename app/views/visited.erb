<%= erb :nav %>
<div class="gravatar">
  <% hash = Digest::MD5.hexdigest(@user.email) %>
  <img src="http://www.gravatar.com/avatar/<%= hash %>"/><br>

  <h2>places i have been.</h2>

    <% @destinations.each do |destination| %>
      <% if destination.visited == true %>
        <li class="list"><%= destination.name %></li>
      <% end %>
    <% end %>

</div>

